@page "/showtoast"
@inject IToastService toastService

<PageTitle>Show Toast Notification</PageTitle>

<h1>Show toast notification</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="@(() => toastService.ShowInfo("I'm an INFO message"))">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
